<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/colorScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shli"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:textSize="45sp"
        android:id="@+id/tvShli"
        android:textColor="@color/colorBackground"
        />

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Own Customised Shopping List "
        android:layout_marginLeft="80dp"
        android:layout_below="@id/tvShli"
        android:layout_marginRight="50dp"
        android:textSize="18dp"
        android:textColor="#808A98"
        android:id="@+id/tvDes"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="60dp"
        android:layout_width="270dp"
        android:id="@+id/cvSignUp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorBackground"
        android:layout_below="@id/tvDes"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:id="@+id/tvSignUpDes"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:layout_below="@id/tvSignUpDes"
                android:layout_marginTop="12dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:id="@+id/cvSignIn"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cvSignUp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            >

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:id="@+id/tvSignInDes"
                android:textColor="#F58CA2" />

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:layout_below="@id/tvSignInDes"
                android:layout_marginTop="12dp"
                android:textSize="20dp"
                android:textColor="@color/colorBackground"
                android:textStyle="bold"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>