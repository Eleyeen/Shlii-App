<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorScreen"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/backarrow"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ivBackArrowSignUp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="New Account"
        android:textColor="#344356"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:id="@+id/tvSignUp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Skip"
        android:textColor="#344356"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:id="@+id/tvSkip"
        />


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start  by  entering  your email address below "
        android:textColor="#808A98"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/tvSignUp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/tvSignUpDes"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvSignUpDes"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cvLoginScreen"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        >
        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:textStyle="bold"
                android:hint="First Name"
                android:textColorHint="@color/colorhintText"
                android:textSize="17dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/etFirstNameSignUp"
                />
            <View
                android:background="@color/colorScreen"
                android:layout_below="@id/etFirstNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/vView"
                />

            <EditText
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="@color/colorhintText"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_below="@id/vView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:hint="Last Name"
                android:textColor="@color/colorBlack"
                android:id="@+id/etLastNameSignUp"
                />

            <View
                android:background="@color/colorScreen"
                android:layout_below="@id/etLastNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/vView1"
                />

            <EditText
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="@color/colorhintText"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_below="@id/vView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:hint="Email"
                android:textColor="@color/colorBlack"
                android:id="@+id/etEmailSignUp"
                />
            <View
                android:background="@color/colorScreen"
                android:layout_below="@id/etEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/vView2"
                />

            <EditText
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="@color/colorhintText"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_below="@id/vView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:hint="Enter Your Password"
                android:textColor="@color/colorBlack"
                android:id="@+id/etPasswordSignUp"
                />
            <View
                android:background="@color/colorScreen"
                android:layout_below="@id/etPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/vView3"
                />

            <EditText
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColorHint="@color/colorhintText"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_below="@id/etPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:hint="Enter Your Confirm Password"
                android:textColor="@color/colorBlack"
                android:id="@+id/etConfirmPasswordLogin"
                />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#808A98"
        android:id="@+id/alreadyLogin"
        android:layout_below="@+id/cvLoginScreen"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tvSignIn"
        android:layout_below="@+id/alreadyLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textColor="@color/colorBackground"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btnContinueSignUp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvSignIn"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:text="Continue"
        android:textSize="17dp"
        />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
</ScrollView>