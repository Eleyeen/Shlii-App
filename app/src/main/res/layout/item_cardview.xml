<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">



    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout_1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        app:mode="normal"
        app:dragEdge="right"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#FFD600"
                android:textColor="@android:color/white"
                android:text="Add to Shop"
                android:id="@+id/tvaddShop"
                android:onClick="deleteOnClick"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:text="Delete"
                android:textStyle="bold"
                android:id="@+id/tvDelete"
                android:onClick="deleteOnClick"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:onClick="layoutOneOnClick">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:id="@+id/startId"
                    />

                <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Broccoli"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="7dp"
                android:textStyle="bold"
                android:id="@+id/tvItems"
                />

            <TextView

                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="7dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="39"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                android:id="@+id/tvQuantity"
                />
            </RelativeLayout>
        </FrameLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>







    <View
        android:layout_below="@+id/tvQuantity"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2EBF6"
        />


</LinearLayout>